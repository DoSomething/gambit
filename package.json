{
  "name": "gambit",
  "version": "6.12.2",
  "description": "The DoSomething.org chatbot service for multi-platform conversations.",
  "author": "DoSomething.org",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DoSomething/gambit.git"
  },
  "scripts": {
    "test-fast": "NODE_ENV=test ava --serial --fail-fast",
    "test:unit": "NODE_ENV=test ava --serial test/unit",
    "test:integration": "NODE_ENV=test ava --serial test/integration",
    "test:full": "npm run lint && npm run coverage && npm run test:integration",
    "coverage": "NODE_ENV=test nyc --all ava --serial test/unit",
    "html-coverage-report": "nyc report --reporter=html",
    "publish-coverage-report": "nyc report --reporter=lcov && codecov",
    "lint": "eslint --ext=.js .",
    "start": "nodemon --optimize_for_size --max_old_space_size=153 main.js"
  },
  "ava": {
    "powerAssert": false,
    "failWithoutAssertions": false,
    "files": [
      "test/**/*.test.js"
    ]
  },
  "nyc": {
    "exclude": [
      "test",
      "coverage"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "test/*"
    ]
  },
  "engines": {
    "node": "12.x"
  },
  "dependencies": {
    "@dosomething/gateway": "^2.0.1",
    "@dosomething/northstar-js": "git://github.com/DoSomething/northstar-js.git",
    "bad-words": "3.0.3",
    "basic-auth": "^2.0.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "cacheman": "^2.2.1",
    "cacheman-redis": "^2.1.0",
    "colors": "^1.4.0",
    "date-fns": "^1.30.1",
    "deep-extend": "^0.6.0",
    "dotenv": "^7.0.0",
    "express": "^4.17.1",
    "express-restify-mongoose": "^5.1.0",
    "express-sslify": "^1.2.0",
    "google-libphonenumber": "^3.2.16",
    "graphql-request": "^1.8.2",
    "heroku-logger": "^0.3.3",
    "iso-3166-2": "^1.0.0",
    "linkify-it": "^2.2.0",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "mongoose": "^5.11.13",
    "mustache": "^2.3.0",
    "newrelic": "^5.13.1",
    "query-string": "^6.13.8",
    "rate-limiter-flexible": "^1.3.2",
    "redis": "^2.8.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "rivescript": "2.0.0-alpha.6",
    "superagent": "^3.8.3",
    "twilio": "^3.55.0",
    "underscore": "^1.12.0",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@dosomething/eslint-config": "^4.0.0",
    "ajv": "^6.12.6",
    "ava": "^1.4.1",
    "chai": "^4.2.0",
    "chance": "^1.1.7",
    "codecov": "^3.8.1",
    "eslint": "^5.16.0",
    "eslint-plugin-ava": "^7.1.0",
    "nock": "^10.0.6",
    "node-mocks-http": "^1.10.1",
    "nodemon": "^1.19.4",
    "nyc": "^14.1.1",
    "readline": "^1.3.0",
    "rewire": "^4.0.1",
    "sinon": "^4.5.0",
    "sinon-chai": "^3.5.0",
    "supertest": "^3.4.2"
  }
}
